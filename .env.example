# Perplexity OpenAI-compatible API Server Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Perplexity session token
# Get it from: https://www.perplexity.ai → DevTools (F12) → Application → Cookies
# Copy the value of '__Secure-next-auth.session-token'
PERPLEXITY_SESSION_TOKEN=your_session_token_here

# Optional: API key for client authentication
# If set, clients must provide this in Authorization: Bearer <key>
OPENAI_API_KEY=

# Server settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Rate limiting
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60

# Conversation settings
CONVERSATION_TIMEOUT=3600
MAX_CONVERSATIONS_PER_USER=100

# Model defaults
DEFAULT_MODEL=perplexity-auto
DEFAULT_CITATION_MODE=CLEAN
